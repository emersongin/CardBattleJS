{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "skipLibCheck": true,
        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "preserve",
        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "strictPropertyInitialization": false,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@game/*": ["src/game/*"],
            "@api/*": ["src/game/api/*"],
            "@constants/*": ["src/game/constants/*"],
            "@objects/*": ["src/game/objects/*"],
            "@scenes/*": ["src/game/scenes/*"],
            "@types/*": ["src/game/types/*"],
            "@ui/*": ["src/game/ui/*"],
            "@utils/*": ["src/game/utils/*"],
            "@mocks/*": ["src/tests/mocks/*"],
            "@tests/*": ["src/tests/*"]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}